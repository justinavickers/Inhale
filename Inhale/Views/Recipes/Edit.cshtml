@model Inhale.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Recipe</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RecipeId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeNotes" class="control-label"></label>
                <input asp-for="RecipeNotes" class="form-control" />
                <span asp-validation-for="RecipeNotes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeTypeId" class="control-label"></label>
                <select asp-for="RecipeTypeId" class="form-control" asp-items="ViewBag.RecipeTypeId"></select>
                <span asp-validation-for="RecipeTypeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RecipeIngredients" class="control-label">Ingredients</label>
                <select asp-for="RecipeIngredients" class="form-control" asp-items="ViewBag.IngredientId"></select>
            </div>
            <div class="form-group" hidden>
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
