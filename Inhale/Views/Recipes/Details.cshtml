@model Inhale.Models.Recipe

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Recipe</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Notes
        </dt>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.RecipeNotes)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeNotes)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.RecipeType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.RecipeType.Name)
        </dd>
        <dt class="col-sm-2">
            Ingredients
        </dt>
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.RecipeIngredients)
        </dt>
        
            @foreach (var r in Model.RecipeIngredients)
            {
                <dd>
                       @Html.DisplayFor(modelItem => r.Ingredient.Name)
                </dd>
            }
        
        <dt class="col-sm-2" hidden>
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10" hidden>
            @Html.DisplayFor(model => model.User.Id)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.RecipeId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
