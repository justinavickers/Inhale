@model IEnumerable<Inhale.Models.Recipe>

@{
    ViewData["Title"] = "MyRecipes";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeNotes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RecipeType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id = item.RecipeId })
            </td>
            <td>
                @Html.ActionLink("Delete", "Delete", new { id = item.RecipeId })
            </td>
        </tr>
}
    </tbody>
</table>
