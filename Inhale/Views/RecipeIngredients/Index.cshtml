@model IEnumerable<Inhale.Models.RecipeIngredients>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ingredient)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Recipe)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ingredient.IngredientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Recipe.RecipeId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.RecipeIngredientId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.RecipeIngredientId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.RecipeIngredientId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
